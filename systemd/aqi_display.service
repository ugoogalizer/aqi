 [Unit]
 Description=Air Quality - Display Service
 After=multi-user.target

 [Service]
 Type=idle
 ExecStart=/usr/bin/python3 -u /home/pi/aqi-pi/python/display.py
 StandardOutput=file:/home/pi/aqi-pi/log/aqi_sensor.log
 StandardError=file:/home/pi/aqi-pi/log/aqi_sensor.log

 [Install]
 WantedBy=multi-user.target